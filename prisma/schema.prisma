generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://docker:docker@localhost:5432/api_express_prisma"
}

model User {
  id String @id @default(uuid())
  name String
  email String
  @@map("users")
}

model Refeicao{
  id String @id @default(uuid())
  name String
  descricao String
  dataHora DateTime
  dentroDieta Boolean
  idUser String 
  @@map("refeicao")
}

